{
    "editor.formatOnSave": true,
    "[templ]": {
        "editor.defaultFormatter": "a-h.templ"
    },
    "tailwindCSS.includeLanguages": {
        "templ": "html"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "tmp": true,
        "go.sum": true,
        "node_modules": true,
        "package-lock.json": true,
        "**/*templ.go": true,
    }
}